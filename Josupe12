<!DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>PixelMV – Jogo</title>
<style>
    body {
        margin: 0;
        overflow: hidden;
        background: #87CEEB;
        image-rendering: pixelated;
    }

    canvas {
        background: url('https://i.imgur.com/8sA7JtQ.png'); /* Céu pixelado */
        display: block;
        width: 100vw;
        height: 100vh;
    }
</style>
</head>
<body>

<canvas id="game"></canvas>

<script>
const canvas = document.getElementById("game");
const ctx = canvas.getContext("2d");

canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

let player = {
    x: canvas.width / 2,
    y: canvas.height / 2,
    size: 40,
    speed: 4,
    img: new Image()
};

player.img.src = "https://i.imgur.com/M8fyMTx.png"; // Personagem PixelMV

let keys = {};

window.addEventListener("keydown", e => keys[e.key] = true);
window.addEventListener("keyup", e => keys[e.key] = false);

function drawPlayer() {
    ctx.drawImage(player.img, player.x, player.y, player.size, player.size * 1.3);
}

function update() {
    if (keys["w"]) player.y -= player.speed;
    if (keys["s"]) player.y += player.speed;
    if (keys["a"]) player.x -= player.speed;
    if (keys["d"]) player.x += player.speed;

    // Mantém dentro da tela
    player.x = Math.max(0, Math.min(canvas.width - player.size, player.x));
    player.y = Math.max(0, Math.min(canvas.height - player.size, player.y));
}

function gameLoop() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
    update();
    drawPlayer();
    requestAnimationFrame(gameLoop);
}

gameLoop();
</script>

</body>
</html>
